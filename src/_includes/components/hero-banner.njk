{% if component.data %}
<div 
    class="hero-banner relative {% if not component.data.height %}min-h-[70vh]{% endif %}"
    {% if component.data.height %}
    style="height: {{ component.data.height }};"
    {% endif %}
>
    {% if component.data.background.type == "video" %}
        <video 
            class="absolute inset-0 w-full h-full object-cover"
            autoplay 
            loop 
            muted 
            playsinline
        >
            <source src="{{ component.data.background.src }}" type="{{ component.data.background.format | default('video/mp4') }}">
        </video>
    {% else %}
        <img 
            src="{{ component.data.background.src }}" 
            alt="{{ component.data.background.alt }}"
            class="absolute inset-0 w-full h-full object-cover"
        >
    {% endif %}

    {% if component.data.overlay %}
        <div class="absolute inset-0 bg-background/{{ component.data.overlay.opacity | default(50) }}"></div>
    {% endif %}

    <div class="container relative h-full flex items-center">
        <div class="max-w-2xl">
            {% if component.data.eyebrow %}
                <p class="text-sm uppercase tracking-widest mb-sm text-primary/80">{{ component.data.eyebrow }}</p>
            {% endif %}

            {% if component.data.title %}
                <h1 class="mb-md">{{ component.data.title }}</h1>
            {% endif %}

            {% if component.data.text %}
                <div class="prose prose-light prose-lg mb-lg">
                    {{ component.data.text | markdown | safe }}
                </div>
            {% endif %}

            {% if component.data.cta %}
                <a 
                    href="{{ component.data.cta.url }}" 
                    class="inline-block bg-primary text-background px-lg py-md text-lg font-medium hover:bg-primary/80 transition-colors duration-300 no-underline"
                >
                    {{ component.data.cta.text }}
                </a>
            {% endif %}
        </div>
    </div>
</div>
{% endif %}