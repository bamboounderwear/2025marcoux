{% if component.data %}
<div class="container">
    {% if component.data.title %}
        <h2 class="mb-md">{{ component.data.title }}</h2>
    {% endif %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-lg">
        {% set posts = collections.posts | limit(6) %}
        {% if posts.length > 0 %}
            {% for post in posts %}
                <a href="{{ post.url }}" class="group no-underline">
                    <article>
                        <figure class="relative mb-sm overflow-hidden">
                            <img 
                                src="{{ post.data.image }}" 
                                alt="{{ post.data.title }}"
                                class="w-full aspect-[16/9] object-cover transition-transform duration-500 group-hover:scale-105"
                            >
                            <div class="absolute top-sm left-sm">
                                <span class="bg-background/80 backdrop-blur-sm text-primary px-sm py-xs text-sm">
                                    {{ post.data.category }}
                                </span>
                            </div>
                        </figure>
                        <h3 class="text-xl mb-xs">{{ post.data.title }}</h3>
                        <p class="text-secondary text-base mb-0">{{ post.data.description }}</p>
                    </article>
                </a>
            {% endfor %}
        {% else %}
            <p class="text-secondary">No posts found.</p>
        {% endif %}
    </div>
</div>
{% endif %}