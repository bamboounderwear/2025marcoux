{% if component.data %}
<div class="container">
    {% if component.data.title %}
        <h2 class="mb-md">{{ component.data.title }}</h2>
    {% endif %}
    {% if component.data.text %}
        <div class="prose prose-light">
            {{ component.data.text | markdown | safe }}
        </div>
    {% endif %}
</div>
{% endif %}