{% if component.data %}
<div class="container">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-lg items-center">
        <div class="order-2 lg:order-1">
            {% if component.data.title %}
                <h1 class="mb-md">{{ component.data.title }}</h1>
            {% endif %}
            {% if component.data.text %}
                <div class="prose prose-light">
                    {{ component.data.text | markdown | safe }}
                </div>
            {% endif %}
            {% if component.data.cta %}
                <a 
                    href="{{ component.data.cta.url }}" 
                    class="inline-block mt-lg bg-primary text-background px-lg py-md text-lg font-medium hover:bg-primary/80 transition-colors duration-300 no-underline"
                >
                    {{ component.data.cta.text }}
                </a>
            {% endif %}
        </div>
        <div class="order-1 lg:order-2">
            {% if component.data.image %}
                <figure class="relative aspect-[4/3] lg:aspect-[3/4] overflow-hidden">
                    <img 
                        src="{{ component.data.image.src }}" 
                        alt="{{ component.data.image.alt }}"
                        class="absolute inset-0 w-full h-full object-cover"
                    >
                </figure>
            {% endif %}
        </div>
    </div>
</div>
{% endif %}